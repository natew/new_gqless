{
  "name": "gqless_refactor",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "pnpm build -r --stream",
    "dev": "rimraf packages/*/dist packages/*/*.tsbuildinfo && node dev.mjs",
    "dev:nodemon": "pnpm prepare -r --no-bail && pnpm test -r --no-bail --no-sort --stream",
    "dev:react": "rimraf packages/gqless/dist packages/gqless/*.tsbuildinfo packages/gqless-react/dist packages/gqless-react/*.tsbuildinfo && pnpm -r --filter @dish/gqless start -- --onSuccess \"pnpm --filter gqless_refactor -r exec -- pnpm -r --filter @dish/gqless-react start:with:example\"",
    "dev:start": "pnpm start -r --no-bail --no-sort",
    "dev:test": "pnpm test:watch -r --no-bail --no-sort --stream",
    "publish:next": "pnpm i && pnpm test && pnpm -r publish --access public --tag next",
    "test": "pnpm test -r --no-sort --no-bail --stream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "fkill": "^7.1.0",
    "husky": "^4.3.8",
    "kill-port": "^1.6.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^4.1.2",
      "jest": "^26.6.3",
      "ts-jest": "^26.4.4"
    }
  }
}
